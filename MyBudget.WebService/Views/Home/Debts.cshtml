@{
    ViewData["Title"] = "Debts ";
    /*coloring the negative ammount of balance to red based on the site CSS:*/
    var balanceStr = ViewBag.balance?.ToString();
    double balanceValue = 0;

    double.TryParse(
        balanceStr?.Replace("$", "").Replace(",", "").Replace("(", "-").Replace(")", "").Trim(),
        out balanceValue
    );
    var balanceClass = balanceValue < 0 ? "negative-balance" : "";

    // Formatting balance
    var formattedBalance = balanceValue < 0
        ? $"-${Math.Abs(balanceValue):N2}"
        : $"${balanceValue:N2}";
}

@model List<MyBudget.Entity.Debt>

<div class="text-center">
    <h1 class="display-4">Debts</h1>
    <br />
    <hr />
    <br />
    <h4> Balance <span class="@balanceClass">@formattedBalance</span> </h4>
    <br />
    <h6>Total Debts  @ViewBag.Debts</h6>
    <br />
    <a asp-controller="home" asp-action="DebtsAddEdit" class="btn btn-primary">Add</a>
    <br />
    <br />
    <table class="debts-table">
        <thead>
            <tr>
                <th>
                    Description
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var Debt in Model)
                {
                    <tr>
                        <td>
                            @Debt.Description
                        </td>
                        <td>
                            @Debt.Amount.ToString("C")
                        </td>
                        <td>
                            <small>
                                @Debt.Date
                            </small>
                        </td>
                        <td>
                            <a asp-action="DebtsAddEdit" asp-route-id="@Debt.ID" style="text-decoration:none;" title="Edit">✎⠀</a>
                            <a asp-action="DebtsDelete" asp-route-id="@Debt.ID" style="text-decoration:none;" title="Remove">⨉</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
